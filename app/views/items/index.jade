doctype html
html
  head
    meta(charset='utf-8')
    title eCommerce
    link(rel='stylesheet', href='/css/style.css')
  body
    h1 eCommerce
    nav
      ul
        li: a(href='/') Home
        li: a(href='/about') About
        li: a(href='/faq') FAQ
  table
    th Name
    th Length
    th Width
    th Height
    th Weight
    th Color
    th Quantity
    th MSRP
    th Percent Off
    each item in items
      ul
      tr
        td: a(href='/items/#{item_id}')= item.name
        td= item.dimensions.l
        td= item.dimensions.w
        td= item.dimensions.h
        td= item.weight
        td= item.color
        td= item.quantity
        td= item.msrp
        td= item.percentOff
        td= item.cost()

